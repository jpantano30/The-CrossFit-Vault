<%- include('header.ejs') %>
  <h1>Edit Workout</h1>
  <form action="/workouts" method="POST" class="newForm">
    <p>Name: <input type="text" name="name" value="<%=workout.name%>" class="score"></p><br/> 
    <p>Description: <input type="text" name="description" value="<%=workout.description%>" class="score"></p><br/> 
    <div class="wrapper">
      <p>Category: <select name="category" id="workoutCategories" value="<%=workout.category%>" class="score">
        <option value="The Girls">The Girls</option>
        <option value="Hero WODs">Hero WODs</option>
        <option value="Benchmarks">Benchmarks</option>
        <option value="Metcon">Metcon</option>
        <option value="Lifts">Lifts</option>
        <option value="Gymnastics">Gymnastics</option>
      </select></p><br/>
    </div>
    <p>Duration: <input type="text" name="duration" value="<%=workout.duration%>" class="score"></p><br/>
    <p>Date: <input type="date" name="date" value="<%=workout.date%>" class="score"></p><br/>
    <p>Score: <input type="text" name="score" class="score"></p>
    <input type="submit" name="" value="Add Workout" class="button bottom">
  </form>
  <%- include('footer.ejs') %>