<%- include('header.ejs') %>

  <nav>
    <a href="/searchWODs">Search Workouts</a>
  </nav>

  <h1>WORKOUTS</h1>

  <ul class="catList">
    <% categories.forEach(function(category) { %>
      <li><a href="#" class="category-link" data-category="<%= category %>"><%= category %></a></li>
    <% }) %>
      <li><a href="#" id="showAll">Show All</a></li>
      <li><a href="#" id="showNone">Show None</a></li>
  </ul>
  <div class="workout-cards">
    <% workouts.forEach(function(workout) { %>
      <div class="card workout-item" data-category="<%= workout.category %>">
        <div class="card-body">
          <h2 class="card-title"><a href="/workouts/<%= workout._id %>"><%= workout.name %></a></h2>
          <p class="card-text"><%= workout.description %></p>
          <p class="card-text"><%= workout.duration %></p>
        </div>
      </div>
    <% }) %>
  </div>
  
  <nav>
    <a href="/workouts/new">Add New Workout</a>
  </nav>


  <script src="/js/index.js"></script>

  <%- include('footer.ejs') %>

