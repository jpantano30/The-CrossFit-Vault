<%- include('header.ejs') %>
  <h1>New Workout</h1>
  <form action="/workouts" method="POST" class="newForm">
    <p>Name: <input type="text" name="name" class="score" placeholder="Workout Name" style="text-align: center;"></p><br/> 
    <p>Description: <input type="text" name="description" class="score" placeholder="Workout" style="text-align: center;"></p><br/> 
    <div class="wrapper">
      <p>Category: <select name="category" id="workoutCategories" class="score">
          <option value="The Girls">The Girls</option>
          <option value="Hero WODs">Hero WODs</option>
          <option value="Benchmarks">Benchmarks</option>
          <option value="Metcon">Metcon</option>
          <option value="Lifts">Lifts</option>
          <option value="Gymnastics">Gymnastics</option>
        </select></p><br/>
    </div>
    <p>Duration: <input type="text" name="duration" class="score" placeholder="Time Cap or other duration"></p><br/>
    <p>Date: <input type="date" name="date" class="score"></p><br/>
    <p>Score: <input type="text" name="score" class="score" placeholder="Time, weight, or rounds+reps"></p>
    <input type="submit" name="" value="Add Workout" class="button bottom">
    <br>
  </form>
  <%- include('footer.ejs') %>